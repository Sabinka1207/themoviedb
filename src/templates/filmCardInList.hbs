<li class="film-card">
    <img class="film-poster" data-id={{id}} src="https://image.tmdb.org/t/p/w300{{poster_path}}">
    <p class="film-title">{{original_title}}{{original_name}}</p>
    <div class="film-descr">
        <span class="hilm-genre">{{genre_ids}}</span>
        <span class="hilm-year"> | {{release_date}}{{first_air_date}}</span>
    </div>
</li>